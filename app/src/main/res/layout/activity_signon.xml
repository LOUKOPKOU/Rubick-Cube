<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louw.imy320.signon">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign on"
        android:id="@+id/signonText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username"
        android:id="@+id/usernameTextSignon"
        android:layout_below="@+id/signonText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="email"
        android:id="@+id/emailTextSignon"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/usernameSignon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/dobTextSignon"
        android:text="date of birth"
        android:layout_below="@+id/emailSignon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="password"
        android:id="@+id/passwordTextSignon"
        android:layout_alignTop="@+id/usernameTextSignon"
        android:layout_alignLeft="@+id/passwordComfSignon"
        android:layout_alignStart="@+id/passwordComfSignon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="password confirm"
        android:id="@+id/passwordComfSignon"
        android:layout_alignTop="@+id/emailTextSignon"
        android:layout_toRightOf="@+id/usernameSignon"
        android:layout_toEndOf="@+id/usernameSignon"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/usernameSignon"
        android:layout_below="@+id/usernameTextSignon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/emailSignon"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailTextSignon"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/passwordSignon"
        android:layout_alignBottom="@+id/usernameSignon"
        android:layout_alignLeft="@+id/passwordTextSignon"
        android:layout_alignStart="@+id/passwordTextSignon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/passcomfSignon"
        android:layout_alignBottom="@+id/emailSignon"
        android:layout_alignLeft="@+id/passwordComfSignon"
        android:layout_alignStart="@+id/passwordComfSignon" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="8"
        android:id="@+id/dobSignon"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dobTextSignon"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign on"
        android:id="@+id/signon"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/usernameTextSignon"
        android:layout_toEndOf="@+id/usernameTextSignon"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backSignon"
        android:layout_alignTop="@+id/signon"
        android:layout_alignLeft="@+id/passcomfSignon"
        android:layout_alignStart="@+id/passcomfSignon" />

</RelativeLayout>
